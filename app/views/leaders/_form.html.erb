<%= simple_form_for(@leader) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :birthdate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
