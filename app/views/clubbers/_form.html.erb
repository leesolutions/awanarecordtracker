<%= simple_form_for(@clubber) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :parents %>
    <%= f.input :birthdate %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.association :rank, :collection => Rank.all, :label_method => :title, :prompt => "Choose a rank" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
