<h1>Listing clubbers</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Rank</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubbers.each do |clubber| %>
  <tr>
    <td><%= clubber.fname %></td>
    <td><%= clubber.lname %></td> 
    <td><%= clubber.rank.title %></td>
    <td><%= link_to 'Show', clubber %></td>
    <td><%= link_to 'Edit', edit_clubber_path(clubber) %></td>
    <td><%= link_to 'Destroy', clubber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

