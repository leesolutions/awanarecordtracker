<%= simple_form_for(@award) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.association :rank, :collection => Rank.all, :label_method => :title, :prompt => "Choose a rank" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
